@{
    ViewBag.Title = "Edit";
}   
<h3>Student, Name</h3>
<div class="row">
  <div class="col-md-2">
    <img id="Image1" style="max-width: 100%;" src="https://studentinfo.urbanimpact.us/uif/StudentPictures/KyleWatts.jpg" />
  </div>
  <div class="col-md-3">
      <div class="form-group">
        <label for="comments">Comments</label>
        <textarea class="form-control" id="comments" rows="5"></textarea>
      </div>
  </div>
  <div class="col-md-7">
  <label>General information</label>
    <div class="rows">
        <div class="col-md-4">   
            <div class="checkbox">
              <label>
                <input type="checkbox" value="">
                Drivers License
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="">
                Birth Certificate
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="">
                PA ID
              </label>
            </div>    
            <div class="form-group">
                <label for="z">Interviewed</label>
                <input type="text" class="form-control input-sm" id="z">
            </div>
        </div>
        <div class="col-md-4">
            <div class="checkbox">
              <label>
                <input type="checkbox" value="">
                Has Graduated?
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="">
                Bank Account
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="">
                Social Security Card
              </label>
            </div>            
            <div class="form-group">
                <label for="z">GPA</label>
                <input type="text" class="form-control input-sm" id="z">
            </div>   
        </div>        
        <div class="col-md-4">      
            <div class="form-group">
                <label for="z">HS Transcript</label>
                <input type="text" class="form-control input-sm" id="z">
            </div>   
            <div class="form-group">
                <label for="z">HS Graduation</label>
                <input type="text" class="form-control input-sm" id="z">
            </div>
        </div>
    </div>
  </div>
</div>

<div class="row" style="vertical-align: middle;">
    <div class="col-md-6">
        Please choose a bus: 
        <div class="btn-group">
          <button type="button" class="btn btn-default">College</button>
          <button type="button" class="btn btn-default">Trade</button>
          <button type="button" class="btn btn-default">Military</button>
          <button type="button" class="btn btn-default">Career</button>
          <button type="button" class="btn btn-default">Ministry</button>
        </div>
    </div>
    <div class="col-md-6">
        <p class="text-right">
        <button type="submit" class="btn btn-primary btn-lg">Update Student Information</button>  
        </p>  
    </div>
</div>

<ul class="nav nav-tabs">
  <li class="active"><a href="#">College</a></li>
